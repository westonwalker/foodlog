<% content_for :title do %>
  Foodlog &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %> 

<table>
  <thead>
    <tr>
      <th>Meal type</th>
      <th>Calories</th>
      <th>Protiens</th>
      <th>Carbohydrates</th>
      <th>Fats</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.meal_type %></td>
        <td><%= entry.calories %></td>
        <td><%= entry.protiens %></td>
        <td><%= entry.carbohydrates %></td>
        <td><%= entry.fats %></td>
        <td><%= time_ago_in_words(entry.created_at) %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>

<div class="columns is-centered mt-6">
  <%= link_to "View all entries", archives_index_path %>
</div>
